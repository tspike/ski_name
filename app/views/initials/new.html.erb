<div class="row">
  <div class="offset4 span6">
    <h1>What's your skier name?</h1>
  </div>
</div>
<div class="row">
  <div class="offset4 span6">
    <%= semantic_form_for @initials, :remote => true, :label => false, :validate => true, :html => { :class => 'well form-inline' } do |f| %>
    <%= f.input :initials, :hint => "Enter your initials", :label => false, :input_html => { :placeholder => 'POW', :class => 'input-small', :maxlength => '3' } %>
    <% end -%>
  </div>
</div>
<div class="row">
  <div class="offset4 span6" id="result">
  </div>
</div>
